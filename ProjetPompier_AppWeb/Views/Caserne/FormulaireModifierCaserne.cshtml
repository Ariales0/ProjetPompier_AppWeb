@using ProjetPompier_AppWeb.Logics.Models
@model CaserneDTO;
@* Si erreur du côté serveur... affichage du message d'erreur... *@
@if (ViewBag.MessageErreur != null)
{
    <br />
    <div class="alert alert-danger">@ViewBag.MessageErreur</div>
}
else
{
    <br />
    <h3>Modifier une caserne : </h3>
    <hr/>
    @* Formulaire qui, lorsqu'il est exécuté, appelle la méthode ModifierCaserne du controleur CaserneController *@
    <form asp-controller="Caserne" asp-action="ModifierCaserne" method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nom" class="control-label"></label>
                        <input asp-for="Nom" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Adresse" class="control-label"></label>
                        <input asp-for="Adresse" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ville" class="control-label"></label>
                        <input asp-for="Ville" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Province" class="control-label"></label>
                        <input asp-for="Province" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Telephone" class="control-label"></label>
                        <input asp-for="Telephone" class="form-control" required />
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" class="btn btn-primary" value="Modifier" />
                    <input type="button" class="btn btn-danger" value="Annuler" onclick="history.back();" />
                </div>
            </div>
        </div>
    </form>
}
